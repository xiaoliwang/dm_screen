<script src="/bower-libs/jquery/dist/jquery.js"></script>
<script src="/socket.io/socket.io.js"></script>
<input id="sendDm"/>
<input id="click" type = "button" value = "чбошод"/>
<script>
    $(function(){
        var socket = io('/sendDm');

        $('#click').click(function(){
            socket.emit('DM', $('#sendDm').val());
            $('#sendDm').val('');
        });

    });
</script>